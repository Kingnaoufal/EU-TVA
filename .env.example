# EU VAT Ease - Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DB_USER=postgres
DB_HOST=localhost
DB_PASSWORD=admin
DB_NAME=euvat_ease

# ===========================================
# SPRING BOOT
# ===========================================
SPRING_PROFILES_ACTIVE=prod

# ===========================================
# SECURITY
# ===========================================
# Generate a secure random string (min 64 characters)
# Example: openssl rand -base64 64
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-at-least-64-characters

# ===========================================
# SHOPIFY APP CONFIGURATION
# ===========================================
# Get these from your Shopify Partner Dashboard
# https://partners.shopify.com/
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SCOPES=read_orders,write_orders,read_customers

# ===========================================
# APPLICATION URLs
# ===========================================
APP_URL=https://app.euvatease.com
LANDING_URL=https://euvatease.com

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP settings for sending emails (alerts, reminders)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ===========================================
# BILLING (Shopify Billing API)
# ===========================================
BILLING_MONTHLY_PRICE=99.00
BILLING_ANNUAL_PRICE=999.00
BILLING_TRIAL_DAYS=14
